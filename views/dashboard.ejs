<%layout('layouts/boilerplate.ejs') %>

<main class="dash-main">
    <h1 class="dash-greet">
        <% if(currentUser){ %>ðŸ‘‹ Hi, <%= currentUser%>
        <% } else { %>Welcome to <span style="color: #adffc3;">TrackMint!</span><% } %>
    </h1>
    <p>TrackMint is your ultimate solution for managing your finances, designed to simplify and enhance your financial journey. With an intuitive interface and robust features.</p>

    <div>
        <canvas id="myChart"></canvas>
